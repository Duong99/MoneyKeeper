<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_gravity="center_horizontal"
    android:padding="@dimen/padding_large"
    android:background="@drawable/bg_select_ripple_gray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivImageSubCategory"
        android:layout_width="@dimen/height_width_image_normal"
        android:layout_height="@dimen/height_width_image_normal"
        android:layout_gravity="center"
        android:background="@drawable/thu_unknow" />

    <TextView
        android:textSize="@dimen/font_small"
        android:layout_gravity="center"
        android:text="@string/unknown"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/black_text_normal"
        android:id="@+id/tvTitleSubCategory"
        android:layout_width="@dimen/width_sub_category"
        android:layout_height="wrap_content" />

</LinearLayout>