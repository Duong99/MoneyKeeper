<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_event_trip"
        android:background="@drawable/bg_select_ripple_gray">

        <ImageView
            android:id="@+id/ivEvent"
            android:layout_width="@dimen/height_width_ic_select_image"
            android:layout_height="@dimen/height_width_ic_select_image"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/ic_event"
            android:backgroundTint="@color/black_text_normal" />

        <ImageView
            android:layout_width="@dimen/height_width_ic_select_image"
            android:layout_height="@dimen/height_width_ic_select_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/black_text_normal" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextViewNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_large"
            android:layout_toEndOf="@id/ivEvent"
            android:text="@string/journey_event" />

        <include
            android:layout_marginStart="@dimen/margin_large"
            layout="@layout/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/tvTitle"
            android:layout_toEndOf="@id/ivEvent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_event_trip"
        android:background="@drawable/bg_select_ripple_gray">

        <ImageView
            android:id="@+id/ivEventPerson"
            android:layout_width="@dimen/height_width_ic_select_image"
            android:layout_height="@dimen/height_width_ic_select_image"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/ic_person"
            android:backgroundTint="@color/black_text_normal" />

        <ImageView
            android:layout_width="@dimen/height_width_ic_select_image"
            android:layout_height="@dimen/height_width_ic_select_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/black_text_normal" />

        <TextView
            android:id="@+id/tvTitlePerson"
            style="@style/TextViewNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_large"
            android:layout_toEndOf="@id/ivEventPerson"
            android:text="@string/who_with_pay" />

        <include
            android:layout_marginStart="@dimen/margin_large"
            layout="@layout/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/tvTitlePerson"
            android:layout_toEndOf="@id/ivEventPerson" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_event_trip"
        android:background="@drawable/bg_select_ripple_gray">

        <ImageView
            android:id="@+id/ivEventAddress"
            android:layout_width="@dimen/height_width_ic_select_image"
            android:layout_height="@dimen/height_width_ic_select_image"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/ic_address"
            android:backgroundTint="@color/black_text_normal" />

        <ImageView
            android:layout_width="@dimen/height_width_ic_select_image"
            android:layout_height="@dimen/height_width_ic_select_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/black_text_normal" />

        <TextView
            android:id="@+id/tvTitleAdress"
            style="@style/TextViewNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_large"
            android:layout_toEndOf="@id/ivEventAddress"
            android:text="@string/address" />
    </RelativeLayout>
</LinearLayout>