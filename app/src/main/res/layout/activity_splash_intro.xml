<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="3"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.start.intro.SplashIntroActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpIntroSplashIntro"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="@dimen/margin_large"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llDotsSplashIntro"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:layout_below="@id/llDotsSplashIntro"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_register_new_slide_intro"
            android:layout_centerHorizontal="true"
            android:text="@string/register_account_new"
            android:id="@+id/btnRegisterSplashIntro"
            android:layout_width="@dimen/width_button_slide_intro"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="@dimen/margin_large"
            android:textColor="@color/blue"
            android:background="@drawable/bg_button_login_slide_intro"
            android:layout_below="@id/btnRegisterSplashIntro"
            android:text="@string/login"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnLoginSplashIntro"
            android:layout_width="@dimen/width_button_slide_intro"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvSelectLanguageSplashIntro"
            android:layout_margin="@dimen/margin_large"
            android:text="@string/vietnamese"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            style="@style/TextViewNormalBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>