<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_btn_login_register"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="@dimen/padding_large"
    android:id="@+id/llSave"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_gravity="center"
        android:padding="@dimen/padding_medium"
        android:background="@drawable/ic_save_done"
        android:layout_width="@dimen/height_width_ic_select_image"
        android:layout_height="@dimen/height_width_ic_select_image"/>

    <TextView
        android:layout_gravity="center"
        android:textSize="@dimen/font_medium"
        android:padding="@dimen/padding_medium"
        android:textColor="@color/white"
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>