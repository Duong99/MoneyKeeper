<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_select_ripple_gray"
    android:layout_height="@dimen/height_item_rcv_recent_notes">

    <RelativeLayout
        android:layout_width="@dimen/height_item_rcv_recent_notes"
        android:layout_height="@dimen/height_item_rcv_recent_notes">

        <ImageView
            android:background="@drawable/thu_unknow"
            android:id="@+id/ivCategoryRecordOverview"
            android:layout_marginStart="@dimen/margin_start_recent_notes"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/height_width_image_note"
            android:layout_height="@dimen/height_width_image_note" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llContentLeftRecord"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="start|center_vertical"
                android:layout_weight="1"
                android:id="@+id/tvCategoryNameRecordOverview"
                style="@style/TextViewNormalBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/unknown"
                tools:ignore="NestedWeights" />

            <LinearLayout
                android:id="@+id/llAttachFile"
                android:visibility="gone"
                android:gravity="start|center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/ivAttachFileOverview"
                    android:backgroundTint="@color/text_unvalue"
                    android:background="@drawable/ic_attach_file"
                    android:layout_width="@dimen/height_width_ic_check_spinner"
                    android:layout_height="@dimen/height_width_ic_check_spinner" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvExplainOverview"
                    style="@style/TextViewNormal"
                    android:textSize="@dimen/font_small"
                    android:text="@string/unknown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:gravity="start|center_vertical"
                android:layout_weight="1"
                style="@style/TextViewNormal"
                android:textSize="@dimen/font_small"
                android:id="@+id/tvDateRecordOverview"
                android:text="@string/unknown"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:paddingEnd="@dimen/margin_large"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="end|center_vertical"
                android:layout_weight="1"
                android:textSize="@dimen/font_medium"
                android:id="@+id/tvNumberMoneyRecordOverview"
                android:layout_alignParentEnd="true"
                android:text="@string/unknown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="ObsoleteLayoutParam" />

            <LinearLayout
                android:gravity="end|center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="InefficientWeight,NestedWeights">

                <ImageView
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_width="@dimen/height_width_ic_check_spinner"
                    android:layout_height="@dimen/height_width_ic_check_spinner"
                    android:layout_marginStart="@dimen/margin_start_recent_notes"
                    android:background="@drawable/ic_wallet" />

                <TextView
                    style="@style/TextViewNormal"
                    android:textSize="@dimen/font_small"
                    android:id="@+id/tvAccountNameRecordOverview"
                    android:text="@string/unknown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>