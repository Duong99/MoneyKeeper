<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.plus.transfer.TransferFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewNormalBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="end"
                android:padding="@dimen/padding_large"
                android:text="@string/number_money" />

            <include
                layout="@layout/item_layout_input_money"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_layout_input_money" />

            <LinearLayout
                android:layout_marginTop="@dimen/margin_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@string/from_account"
                    android:layout_marginStart="@dimen/done_icon"
                    style="@style/TextViewNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <include layout="@layout/item_layout_account_plus" />

                <TextView
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@string/to_account"
                    android:layout_marginStart="@dimen/done_icon"
                    style="@style/TextViewNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_select_ripple_gray"
                    android:id="@+id/rlChooseToAccount"
                    android:layout_height="@dimen/height_item_plus">

                    <RelativeLayout
                        android:id="@+id/rlImageChooseAccount"
                        android:layout_width="@dimen/width_item_image_plus"
                        android:layout_height="@dimen/height_item_plus">

                        <ImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/ivImageToAccount"
                            android:layout_width="@dimen/height_width_image_normal"
                            android:layout_height="@dimen/height_width_image_normal"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/margin_large"
                            android:background="@drawable/ic_help_white"
                            android:backgroundTint="@color/black_text_normal_default" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvTitleToAccount"
                        style="@style/TextViewNormalBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/rlImageChooseAccount"
                        android:text="@string/select_account" />

                    <ImageView
                        android:id="@+id/ivCheckAccount"
                        android:layout_width="@dimen/height_width_ic_select_image"
                        android:layout_height="@dimen/height_width_ic_select_image"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:background="@drawable/ic_arrow_right"
                        android:backgroundTint="@color/black_text_normal" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_layout_date_time" />

                <include layout="@layout/item_layout_explain" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llContentDetail"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/item_layout_address_plus" />

                <include
                    layout="@layout/item_layout_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large" />

                <include
                    layout="@layout/item_layout_not_include_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large" />

                <include
                    layout="@layout/item_layout_select_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large" />

            </LinearLayout>


            <include
                android:layout_marginTop="@dimen/margin_large"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_plus"
                layout="@layout/item_layout_more_detail" />

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:visibility="gone"
                    android:layout_margin="@dimen/margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    layout="@layout/item_layout_delete" />

                <include
                    android:layout_margin="@dimen/margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    layout="@layout/item_button_save" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>