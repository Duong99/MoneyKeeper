<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_select_ripple_gray"
    android:id="@+id/rlChooseCategory"
    android:layout_height="@dimen/height_item_category_large_plus">

    <RelativeLayout
        android:id="@+id/rlImageCategory"
        android:layout_width="@dimen/width_item_image_plus"
        android:layout_height="@dimen/height_item_category_large_plus"
        android:paddingTop="@dimen/padding_large">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/ivImageCategories"
            android:layout_width="@dimen/height_width_image_normal"
            android:layout_height="@dimen/height_width_image_normal"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_help_white" />
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/height_width_image_normal"
        android:layout_height="@dimen/height_width_image_normal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_large"
        android:background="@drawable/ic_arrow_right"
        android:backgroundTint="@color/black_text_normal_default" />

    <TextView
        android:id="@+id/tvTitleSelectCategory"
        android:textSize="@dimen/font_size_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/rlImageCategory"
        android:text="@string/select_item"
        android:textColor="@color/black_text_normal_default" />

    <include
        layout="@layout/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_view_line"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/rlImageCategory" />
</RelativeLayout>