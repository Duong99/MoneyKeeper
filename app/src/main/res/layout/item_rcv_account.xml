<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/padding_large"
    android:background="@drawable/bg_select_ripple_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/ivPictureAccountType"
        android:layout_width="@dimen/height_width_image_normal"
        android:layout_height="@dimen/height_width_image_normal"/>

    <LinearLayout
        android:layout_marginStart="@dimen/margin_large"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ivPictureAccountType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAccountName"
            style="@style/TextViewNormalBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/margin_small"
            android:id="@+id/tvTotalMoneyAccount"
            style="@style/TextViewNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivOptionAccount"
        android:backgroundTint="@color/black_text_normal"
        android:background="@drawable/ic_option_vert"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/height_width_image_normal"
        android:layout_height="@dimen/height_width_image_normal"/>

</RelativeLayout>