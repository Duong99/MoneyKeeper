<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TextViewNormalBlue" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextViewNormalBlack" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_text_normal</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextViewNormal" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_text_normal_default</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="EditTextNormal" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black_text_normal</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextViewTitleBar" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSlideIntro" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_text_normal</item>
        <item name="android:textSize">@dimen/text_slide_intro</item>
    </style>
</resources>